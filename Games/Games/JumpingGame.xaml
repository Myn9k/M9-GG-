<Window x:Class="Games.JumpingGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Games"
        mc:Ignorable="d"
        Title="JumpingGame" Height="450" Width="800">
    <Canvas Name="GameCanvas" Background="White">
        <Image x:Name="Player" Width="100" Height="60" Canvas.Left="100" Canvas.Bottom="50" Source="img\sus.PNG"/>
        <Image x:Name="Obstacle" Width="30" Height="60" Canvas.Left="770" Canvas.Bottom="40" Source="img\images.PNG"/>
        <Rectangle x:Name="Ground" Width="800" Height="50" Fill="Green" Canvas.Left="0" Canvas.Bottom="0" />
        <StackPanel x:Name="Menu" Height="450" Width="800" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden" Background="Black" Opacity="0.8">
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Продолжить" Margin="20" Click="continues" />
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="В меню" Margin="20" Click="menus" />
        </StackPanel>
    </Canvas>
</Window>